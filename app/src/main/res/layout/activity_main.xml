<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities_introduction.MainActivity">


    <Button
        android:id="@+id/buttonClickMe1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click Me1"
        android:layout_centerInParent="true"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/buttonClickMe2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click Me2"
        android:layout_below="@+id/buttonClickMe1"
        android:layout_centerInParent="true"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/buttonClickMe3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click Me3"
        android:layout_below="@+id/buttonClickMe2"
        android:layout_centerInParent="true"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/textViewPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonClickMe3"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>